<h1>Admin Users</h1>
<p class="pull-right"><%= link_to('分组管理', admin_groups_path, :class => "btn btn-danger") %></p>
<table class="table">
<tr>
  <th>ID</th>
  <th>Email</th>
  <th>Groups</th>
  <th>Actions</th>
</tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.email %></td>
    <td>
      <% user.groups.each do |g| %>
        <%= g.name %><br>
      <% end %>
    </td>
    <td><%= link_to "Edit", edit_admin_user_path(user), :class => "btn btn-default" %></td>
  </tr>
<% end %>
